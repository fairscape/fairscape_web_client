      },
      {
        "name": "command",
        "label": "Command (Optional)",
        "type": "textarea",
        "required": false,
        "placeholder": "The command line execution string or script content"
      },
      {
        "name": "associatedPublication",
        "label": "Associated Publication (Optional)",
        "type": "text",
        "required": false,
        "placeholder": "Identifier or URL"
      },
      {
        "name": "additionalDocumentation",
        "label": "Additional Documentation (Optional)",
        "type": "text",
        "required": false,
        "placeholder": "URL or path"
      },
      {
        "name": "relationships",
        "label": "Inputs / Outputs / Software",
        "type": "relationships",
        "required": false,
        "config": {
          "sources": ["Dataset", "Software"],
          "targets": [
            {
              "id": "usedDataset",
              "label": "Input Datasets",
              "accepts": ["Dataset"]
            },
            {
              "id": "usedSoftware",
              "label": "Software Used",
              "accepts": ["Software"]
            },
            {
              "id": "generated",
              "label": "Generated Datasets/Files",
              "accepts": ["Dataset"]
            }
          ]
        }
      }
    ]
  }
